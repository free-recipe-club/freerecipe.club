---
import Layout from "../layouts/Layout.astro";

const links = [
    {
        title: "Blog",
        url: "/blog",
        body: "Keep track of developments cooking in the free world.",
        svg: "Paper",
    },
    {
        title: "GitHub",
        url: "https://github.com/free-recipe-club/freerecipe.club",
        body: "Discover Free Recipe Club source code on GitHub ðŸ‘¾",
        svg: "GitHub",
    },
];
---

<Layout title="Links." favicon="Chips">
    <section>
        <ul class="p-3 sm:px-0 space-y-3 sm:space-y-0 sm:space-x-3 grid grid-cols-1 sm:grid-cols-2">
            {
                links.map((link) => (
                    <li class="border border-slate-400 hover:bg-indigo-50 relative rounded-md p-2">
                        <div class="flex items-center space-x-2">
                            <img
                                src={`/favicons/${link.svg}.png`}
                                alt=""
                                class="h-6 w-6"
                            />
                            <a
                                href={link.url}
                                class="text-xl font-medium text-slate-700"
                            >
                                <span class="absolute inset-0" />
                                {link.title}
                            </a>
                        </div>
                        <p class="text-slate-600">{link.body}</p>
                    </li>
                ))
            }
        </ul>
    </section>
</Layout>
